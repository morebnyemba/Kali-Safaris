# Production Environment Configuration
# This file contains example values for production deployment
# Copy this to .env.prod and fill in your actual values

# ================================
# Docker Configuration
# ================================
DOCKER_USERNAME=your_dockerhub_username
IMAGE_TAG=latest

# ================================
# PostgreSQL Database Configuration
# ================================
DB_NAME=kalisafaris_prod
DB_USER=kalisafaris_user
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_HOST=db
DB_PORT=5432

# ================================
# Django Configuration
# ================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com
DJANGO_SETTINGS_MODULE=whatsappcrm_backend.settings

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com,https://api.your-domain.com

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ================================
# Meta/WhatsApp Business Platform
# ================================
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_APP_ID=your_app_id
WHATSAPP_APP_SECRET=your_app_secret
WHATSAPP_ACCESS_TOKEN=your_long_lived_access_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# Meta API Configuration
META_API_VERSION=v18.0
META_GRAPH_API_URL=https://graph.facebook.com

# ================================
# Email Configuration (SMTP)
# ================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@your-domain.com
EMAIL_HOST_PASSWORD=your_email_app_password
DEFAULT_FROM_EMAIL=Kali Safaris <noreply@your-domain.com>

# ================================
# IMAP Email Fetching (Mailu)
# ================================
MAILU_IMAP_HOST=imap.your-domain.com
MAILU_IMAP_PORT=993
MAILU_IMAP_USER=info@your-domain.com
MAILU_IMAP_PASS=your_imap_password
MAILU_IMAP_USE_SSL=True

# ================================
# Static and Media Files
# ================================
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# ================================
# Security Settings
# ================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ================================
# Sentry (Optional - Error Tracking)
# ================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# AWS S3 (Optional - for media storage)
# ================================
# USE_S3=False
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_STORAGE_BUCKET_NAME=your_bucket_name
# AWS_S3_REGION_NAME=us-east-1

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# ================================
# Application Settings
# ================================
SITE_NAME=Kali Safaris
SITE_URL=https://your-domain.com
ADMIN_URL=admin/  # Change this for security

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_ENABLE=True
RATE_LIMIT_PER_MINUTE=60

# ================================
# Celery Configuration
# ================================
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False

# ================================
# Feature Flags
# ================================
ENABLE_CATALOG_SYNC=True
ENABLE_PAYMENT_INTEGRATION=False
ENABLE_SMS_NOTIFICATIONS=False

# ================================
# Monitoring (Optional)
# ================================
# PROMETHEUS_ENABLED=True
# GRAFANA_URL=https://monitoring.your-domain.com

# ================================
# Backup Configuration
# ================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ================================
# Notes for Production Setup
# ================================
# 1. Generate SECRET_KEY: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# 2. Use strong, random passwords for all credentials
# 3. Replace all "your_" placeholders with actual values
# 4. Never commit this file to version control
# 5. Rotate credentials regularly
# 6. Enable all security settings in production
# 7. Set up SSL/TLS certificates via Nginx Proxy Manager
# 8. Configure firewall rules (only ports 80, 443, 22)
# 9. Enable database backups
# 10. Set up monitoring and alerting
